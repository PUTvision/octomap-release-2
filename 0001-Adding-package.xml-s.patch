From: William Woodall <wjwwood@gmail.com>
Date: Tue, 18 Dec 2012 14:49:06 -0800
Subject: [PATCH] Adding package.xml's

---
 octomap/package.xml |   16 ++++++++++++++++
 octovis/package.xml |   27 +++++++++++++++++++++++++++
 2 files changed, 43 insertions(+)
 create mode 100644 octomap/package.xml
 create mode 100644 octovis/package.xml

diff --git a/octomap/package.xml b/octomap/package.xml
new file mode 100644
index 0000000..dba0b8a
--- /dev/null
+++ b/octomap/package.xml
@@ -0,0 +1,16 @@
+<package>
+  <name>octomap</name>
+  <version>1.5.3</version>
+  <description>The OctoMap library implements a 3D occupancy grid mapping approach, providing data structures and mapping algorithms in C++. The map implementation is based on an octree. See http://octomap.sf.net for details.</description>
+
+  <author email="wurm@informatik.uni-freiburg.de">Kai M. Wurm</author>
+  <author email="hornunga@informatik.uni-freiburg.de">Armin Hornung</author>
+  <maintainer email="hornunga@informatik.uni-freiburg.de">Armin Hornung</maintainer>
+  <license>BSD</license>
+
+  <url type="website">http://octomap.sf.net</url>
+  <url type="bugtracker">https://sourceforge.net/apps/trac/octomap</url>
+  
+  <buildtool_depend>catkin</buildtool_depend>
+  
+</package>
diff --git a/octovis/package.xml b/octovis/package.xml
new file mode 100644
index 0000000..f16858a
--- /dev/null
+++ b/octovis/package.xml
@@ -0,0 +1,27 @@
+<package>
+  <name>octovis</name>
+  <version>1.5.3</version>
+  <description>octovis is visualization tool for the OctoMap library based on Qt and libQGLViewer. See http://octomap.sf.net for details.</description>
+
+  <author email="wurm@informatik.uni-freiburg.de">Kai M. Wurm</author>
+  <author email="hornunga@informatik.uni-freiburg.de">Armin Hornung</author>
+  <maintainer email="hornunga@informatik.uni-freiburg.de">Armin Hornung</maintainer>
+  <license>GPLv2</license>
+
+  <url type="website">http://octomap.sf.net</url>
+  <url type="bugtracker">https://sourceforge.net/apps/trac/octomap</url>
+  
+
+  <buildtool_depend>catkin</buildtool_depend>
+
+  <build_depend>octomap</build_depend>
+  <build_depend>libqglviewer-qt4-dev</build_depend>
+  <build_depend>libqt4-dev</build_depend>
+  <build_depend>libqt4-opengl-dev</build_depend>
+ 
+  <run_depend>octomap</run_depend>
+  <run_depend>libqglviewer-qt4</run_depend>
+  <run_depend>libqtgui4</run_depend>
+  <run_depend>libqt4-opengl</run_depend>
+  
+</package>
